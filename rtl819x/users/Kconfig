	bool "rtk_cmd daemon"
	default y 
	help
	  A rtk_cmd daemon.

config APP_SAMBA
	bool "samba"
	default n
	help
	  The samba daemon.

choice
	prompt "samba version"
	depends on APP_SAMBA 
	default APP_SAMBA-3.0.37

	config APP_SAMBA-3.0.24
		bool "samba-3.0.24"
	config APP_SAMBA-3.0.37
		bool "samba-3.0.37"
endchoice
